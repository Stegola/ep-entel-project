<h1>Employees</h1>

<table class="table table-striped">
   <tr>
    <th>Name</th>
    <th>Surname</th>
  </tr>
  
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.surname %></td>
      <td><%= link_to("Show", { :action => 'show', :id => employee.id }) %></td>
      <td><%= link_to("Edit", { :action => 'edit', :id => employee.id }) %></td>
      <td><%= link_to("Delete", { :action => 'delete', :id => employee.id }) %></td>
    </tr>
  <% end %>
</table>
<%= link_to("New Employee", { :action => 'new' }) %>